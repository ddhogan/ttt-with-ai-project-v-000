#!/usr/bin/env ruby

require_relative '../config/environment'
puts "          _____ _        _____             _____
               /__   (_) ___  /__   \__ _  ___  /__   \___   ___
                 / /\/ |/ __|   / /\/ _` |/ __|   / /\/ _ \ / _ \
                / /  | | (__   / / | (_| | (__   / / | (_) |  __/
                \/   |_|\___|  \/   \__,_|\___|  \/   \___/ \___|"

puts "Donna's & Yvonne's Tic Tac Toe Game "
puts "Enter '0' for a computer only game, '1' for a one player game, or '2' for a two player game."

def setup
	game_type = gets.strip
	if game_type == "0" then
	  Game.new(player_1 = Players::Computer.new("X"), player_2 = Players::Computer.new("O")).play
	elsif game_type == "1" then
	  Game.new(player_1 = Players::Human.new("X"), player_2 = Players::Computer.new("O")).play
	elsif game_type == "2"
	  Game.new(player_1 = Players::Human.new("X"), player_2 = Players::Human.new("O")).play
	else
		puts "Please enter 0, 1, or 2"
		setup
	end
end

setup